<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/parent"
    app:cardCornerRadius="10dp"
    app:cardElevation="25dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/fifth_color"

    >
<RelativeLayout
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:id="@+id/mainRelativeLayout"
    android:background="@color/second_color"

    >
    <RelativeLayout
        android:id="@+id/firstRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/bookImage"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginTop="5dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookName"
            android:text="bookName"
            android:layout_below="@id/bookImage"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>


        <ImageView
            android:id="@+id/arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookImage"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_down"
            android:layout_marginRight="5dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstRelativeLayout"
        android:id="@+id/secondRelativeLayout"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginBottom="5dp">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookAuthor"
            android:text="Author:"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bookInformation"
            android:text="Information:"
            android:layout_below="@id/bookAuthor"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>
        <ImageView
            android:id="@+id/arrow_up"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow_up"
            android:layout_marginRight="5dp"/>

    </RelativeLayout>

</RelativeLayout>


</com.google.android.material.card.MaterialCardView>